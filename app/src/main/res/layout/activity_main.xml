<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/CameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        opencv:show_fps="true"
        tools:layout_editor_absoluteX="-70dp"
        tools:layout_editor_absoluteY="-66dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch algorithm"
        android:textColor="#FFEB3B"
        opencv:layout_constraintBottom_toBottomOf="parent"
        opencv:layout_constraintEnd_toEndOf="parent"
        opencv:layout_constraintHorizontal_bias="0.744"
        opencv:layout_constraintStart_toStartOf="parent"
        opencv:layout_constraintTop_toTopOf="@+id/CameraView"
        opencv:layout_constraintVertical_bias="0.945" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treshold"
        android:textColor="#FFEB3B"
        opencv:layout_constraintBottom_toBottomOf="parent"
        opencv:layout_constraintEnd_toStartOf="@+id/switch1"
        opencv:layout_constraintHorizontal_bias="0.564"
        opencv:layout_constraintStart_toStartOf="@+id/CameraView"
        opencv:layout_constraintTop_toTopOf="parent"
        opencv:layout_constraintVertical_bias="0.944" />

</androidx.constraintlayout.widget.ConstraintLayout>